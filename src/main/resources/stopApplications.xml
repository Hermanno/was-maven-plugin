<?xml version="1.0"?>
<!DOCTYPE project>
<project default="stopApplications" basedir=".">
    <target name="stopApplications">
        <taskdef name="stopApplications" classname="com.ibm.websphere.ant.tasks.StopApplication"/>
        <wsInstallApp
                wasHome="{{wasHome}}"
                server="{{server}}"
                application="{{applicationName}}"
                profile="{{profile}}"
                properties="{{properties}}"
                profileName="{{profileName}}"
                conntype="{{connectorType}}"
                host="{{host}}"
                port="{{port}}"
                user="{{user}}"
                password="{{password}}"
                failonerror="{{failOnError}}"
                jvmMaxMemory="512M"
                lang="jython"
                />
    </target>
</project>